---
path: <%= projectName %>/tsconfig.json
---
{
  "compilerOptions": {
    "lib": ["ESNext"],
    "module": "ESNext",
    "moduleResolution": "Node",
    "resolveJsonModule": true,
    "strict": true,
    "strictNullChecks": true,
    "esModuleInterop": true
  },
  "include": ["src", "tsup.config.ts"],
  "exclude": ["node_modules", "dist"]
}